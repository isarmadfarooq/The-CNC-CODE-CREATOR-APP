<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".facingCycles.FacingCycleDonwDirectionG94"
    android:background="@color/background_grey">

    <!-- Title Bar -->
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:text="@string/facing_cycle_ndown_direction_g94"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"/>

    <!-- Main Layout: Image and Controls -->
    <LinearLayout
        android:id="@+id/imageAndControlLL"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Left Image Section -->
        <LinearLayout
            android:id="@+id/leftImageSection"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_height="200dp"
            android:padding="4dp"
            tools:ignore="NestedWeights">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/todo"
                android:src="@drawable/facing_cycle_down_dir"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <!-- Right Controls Section -->
        <LinearLayout
            android:id="@+id/rightControlSection"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/background_grey"
            android:padding="8dp">

            <!-- S Parameter -->
            <LinearLayout
                android:id="@+id/S_ParameterLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="4dp">
                <TextView
                    android:id="@+id/S_ParameterTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/s"
                    android:textSize="16sp"
                    android:background="@color/yellow"
                    android:textStyle="bold"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/S_ParameterEt"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_200"
                    android:inputType="number"/>
            </LinearLayout>

            <!-- F Parameter -->
            <LinearLayout
                android:id="@+id/F_ParameterLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="4dp">
                <TextView
                    android:id="@+id/F_ParameterTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/f"
                    android:background="@color/yellow"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/F_ParameterEt"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_0_24"
                    android:inputType="numberDecimal"/>
            </LinearLayout>

            <!-- W Parameter -->
            <LinearLayout
                android:id="@+id/W_ParameterLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="4dp">
                <TextView
                    android:id="@+id/W_ParameterTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/w"
                    android:background="@color/yellow"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/W_ParameterEt"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_0_1"
                    android:inputType="numberDecimal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Start and End Positions Section -->

    <!-- Bottom Buttons Section -->

    <LinearLayout
        android:id="@+id/bottomButtonSectionLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Start Position -->
        <TextView
            android:id="@+id/startPositionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="@color/yellow"
            android:text="@string/start_p"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/g0LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/g0Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/g0" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/g0_X_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:text="@string/x52" />

            <EditText
                android:id="@+id/g0_Z_Et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:text="@string/z3" />
        </LinearLayout>

        <!-- End Position -->
        <TextView
            android:id="@+id/endPositionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:text="@string/end_q"
            android:background="@color/yellow"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/endPositionBtnLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/endPositionXEt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:text="X0." />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/endPositionZEt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:text="@string/z0" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/blue"
        android:padding="8dp"
        android:layout_marginTop="30dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setBtn"
            android:background="@color/lite_blue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/set"
            android:padding="8dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteBtn"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:background="@color/lite_blue"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:padding="8dp"/>
    </LinearLayout>
</LinearLayout>
