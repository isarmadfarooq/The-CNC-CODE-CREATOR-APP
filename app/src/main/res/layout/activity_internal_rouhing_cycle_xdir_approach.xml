            <TextView
                android:id="@+id/eleventhTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="4dp"
                android:background="@color/yellow"
                android:text="@string/_2nd"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/eleventhLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/g1Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:text="@string/g1" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/eleventh_X_ET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:text="@string/x" />

                <EditText
                    android:id="@+id/eleventh_Z_Et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:text="@string/z" />

                <EditText
                    android:id="@+id/eleventh_R_Et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:text="@string/R" />
            </LinearLayout>

            <!-- End Position -->
            <TextView
                android:id="@+id/endPositionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:textColor="@color/black"
                android:text="@string/end_q"
                android:background="@color/yellow"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/endPositionBtnLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/endPositionBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:text="@string/g1" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/endPositionXEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:text="@string/x30" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/endPositionZEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:text="@string/z3" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/blue"
            android:padding="8dp"
            android:layout_marginTop="30dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/setBtn"
                android:background="@color/lite_blue"
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/set"
                android:padding="8dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/deleteBtn"
                android:layout_width="0dp"
                android:layout_marginStart="10dp"
                android:background="@color/lite_blue"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:padding="8dp"/>
        </LinearLayout>
    </LinearLayout>
